<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.ToDoListApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/azul_principal</item>
        <item name="colorPrimaryVariant">@color/azul_escuro</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/azul_claro</item>
        <item name="colorSecondaryVariant">@color/azul_principal</item>
        <item name="colorOnSecondary">@color/black</item> <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:colorBackground">@color/azul_principal</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceVariant">@color/cinza_claro</item>

        <item name="colorAccent">@color/black</item>
        <item name="colorControlActivated">@color/black</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

        <item name="android:datePickerDialogTheme">@style/CustomDatePickerDialog</item>

        <item name="materialButtonStyle">@style/Widget.App.Button.LightMode</item>

    </style>

    <style name="Theme.ToDoListApp" parent="Base.Theme.ToDoListApp" />

    <style name="CustomDatePickerDialog" parent="android:Theme.Material.Light.Dialog.MinWidth">
        <item name="colorAccent">@color/azul_principal</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/cinza_texto_secundario</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:headerBackground">@color/azul_principal</item>
        <item name="android:headerDayOfMonthTextAppearance">@android:color/white</item>
        <item name="android:headerYearTextAppearance">@android:color/white</item>
        <item name="android:headerMonthTextAppearance">@android:color/white</item>
    </style>

    <style name="Widget.App.Button.LightMode" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/cinza_texto_secundario</item>
        <item name="cornerRadius">16dp</item>
    </style>
</resources>